<form method="post" action="/todos" name="todo" id="todoForm">
    <div class="row d-flex justify-content-center align-content-center">

        <div class="col-md-6 form-group d-flex">
            <input value="1" name="completed" id="completed" type="checkbox" class=" p-2 form-check-input">

            <input required minlength="6" placeholder="INSERT NEW TODO" class="mx-1 form-control" name="todo"
                   value="{{name}}">
        </div>
        <div class="form-group col-md-5">
            <select name="listId" class="form-select" required>
                <option value="">SELECT</option>
                {{#each lists}}
                    <option

                        {{#compare  this.id "==" ../listId}}
                        selected
                        {{/compare}}

                        value="{{this.id}}">
                        {{this.name}} {{this.id}}
                    </option>
                {{/each}}
            </select>
        </div>

        <div class="col-md-1">
            <button value="SAVE" class="btn btn-success" title="INSERT LIST">
                SAVE
            </button>

            {{#if showBackButton}}
                <button value="BACK" onclick="location.href='/todos'" class="btn btn-danger" title="BACK TO LIST LIST">
                    BACK

                </button>
            {{/if}}

        </div>
    </div>
</form>
